<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search">

    <TextView
        android:id="@+id/Search_User"
        android:layout_width="184dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/User_Name"
        android:layout_marginTop="20dp"
        android:text="Search User"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="24dp" />

    <EditText
        android:id="@+id/User_Name"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/user_search_button"
        android:layout_toStartOf="@+id/user_search_button"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="textPersonName"
        android:paddingTop="10dp"
        android:textAllCaps="true"
        android:textColor="#999999"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/user_search_button"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="79dp" />

    <Button
        android:id="@+id/user_search_button"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/user_email_button"
        android:layout_marginTop="102dp"
        android:text="Search"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="79dp" />

    <TextView
        android:id="@+id/Display_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/User_Name"
        android:layout_alignStart="@+id/User_Name"
        android:hint="Search by User Name"
        android:textColor="#000080"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/Display2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/User_Name"
        android:layout_marginTop="183dp"
        android:text="Search by Email"
        android:textColor="#000080"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="173dp" />

    <EditText
        android:id="@+id/User_email"
        android:layout_width="238dp"
        android:layout_height="42dp"
        android:layout_below="@+id/Display2"
        android:layout_toStartOf="@+id/user_search_button"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#999999"
        app:layout_constraintEnd_toStartOf="@+id/user_email_button"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="192dp" />

    <Button
        android:id="@+id/user_email_button"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Display2"
        android:layout_marginEnd="31dp"
        android:text="Search"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="192dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/result_list"
        android:layout_width="327dp"
        android:layout_height="252dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Search_User"
        android:layout_marginTop="269dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="242dp"></android.support.v7.widget.RecyclerView>

</RelativeLayout>